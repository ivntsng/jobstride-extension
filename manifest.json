{
  "name": "NextStep Job Tracker",
  "description": "An open-source Chrome extension to track your job applications with NextStep. Learn more https://nextstep-app.vercel.app",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/favicon_24x24.png",
    "32": "icons/favicon_24x24.png",
    "48": "icons/favicon_24x24.png",
    "128": "icons/favicon_24x24.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "NextStep Job Tracker",
    "default_icon": {
      "16": "icons/favicon_24x24.png",
      "32": "icons/favicon_24x24.png"
    }
  },
  "permissions": ["storage", "activeTab", "scripting", "webRequest", "windows"],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://localhost:8080/*",
    "https://nextstep-app.vercel.app/*",
    "https://nextstep-backend.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": [
        "src/config/env.js",
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/utils/modal.js",
        "src/content/sites/base.js",
        "src/content/sites/linkedin.js",
        "src/content/contentScript.js"
      ],
      "css": ["src/content/styles/contentStyle.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.indeed.com/*"],
      "js": [
        "src/config/env.js",
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/utils/modal.js",
        "src/content/sites/base.js",
        "src/content/sites/indeed.js",
        "src/content/contentScript.js"
      ],
      "css": ["src/content/styles/contentStyle.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.ashbyhq.com/*"],
      "js": [
        "src/config/env.js",
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/utils/modal.js",
        "src/content/sites/base.js",
        "src/content/sites/ashby.js",
        "src/content/contentScript.js"
      ],
      "css": ["src/content/styles/contentStyle.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.greenhouse.io/*"],
      "js": [
        "src/config/env.js",
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/utils/modal.js",
        "src/content/sites/base.js",
        "src/content/sites/greenhouse.js",
        "src/content/contentScript.js"
      ],
      "css": ["src/content/styles/contentStyle.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.lever.co/*"],
      "js": [
        "src/config/env.js",
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/utils/modal.js",
        "src/content/sites/base.js",
        "src/content/sites/lever.js",
        "src/content/contentScript.js"
      ],
      "css": ["src/content/styles/contentStyle.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.myworkdayjobs.com/*"],
      "js": [
        "src/config/env.js",
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/utils/modal.js",
        "src/content/sites/base.js",
        "src/content/sites/workday.js",
        "src/content/contentScript.js"
      ],
      "css": ["src/content/styles/contentStyle.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.rippling.com/*"],
      "js": [
        "src/config/env.js",
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/utils/modal.js",
        "src/content/sites/base.js",
        "src/content/sites/rippling.js",
        "src/content/contentScript.js"
      ],
      "css": ["src/content/styles/contentStyle.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/popup/popup.html",
        "src/popup/popup.js",
        "src/popup/styles/style.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  }
}
