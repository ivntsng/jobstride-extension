{
  "name": "My Job Tracker",
  "description": "A simple Chrome extension to track job applications.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Job Tracker"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest",
    "windows"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://localhost:8080/*",
    "https://nextstep-app.vercel.app/*",
    "https://nextstep-backend.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*"
      ],
      "js": [
        "src/config/env.js",
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/utils/modal.js",
        "src/content/sites/base.js",
        "src/content/sites/linkedin.js",
        "src/content/contentScript.js"
      ],
      "css": [
        "src/content/styles/contentStyle.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.indeed.com/*"
      ],
      "js": [
        "src/config/env.js",
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/utils/modal.js",
        "src/content/sites/base.js",
        "src/content/sites/indeed.js",
        "src/content/contentScript.js"
      ],
      "css": [
        "src/content/styles/indeed.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.ashbyhq.com/*"
      ],
      "js": [
        "src/config/env.js",
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/utils/modal.js",
        "src/content/sites/base.js",
        "src/content/sites/ashby.js",
        "src/content/contentScript.js"
      ],
      "css": [
        "src/content/styles/ashby.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.greenhouse.io/*"
      ],
      "js": [
        "src/config/env.js",
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/utils/modal.js",
        "src/content/sites/base.js",
        "src/content/sites/greenhouse.js",
        "src/content/contentScript.js"
      ],
      "css": [
        "src/content/styles/greenhouse.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.lever.co/*"
      ],
      "js": [
        "src/config/env.js",
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/utils/modal.js",
        "src/content/sites/base.js",
        "src/content/sites/lever.js",
        "src/content/contentScript.js"
      ],
      "css": [
        "src/content/styles/lever.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/popup/popup.html",
        "src/popup/popup.js",
        "src/popup/styles/style.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  }
}
