{
  "name": "My Job Tracker",
  "description": "A simple Chrome extension to track job applications.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Job Tracker"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest",
    "windows"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://localhost:8080/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/jobs/*",
        "*://*.indeed.com/*",
        "*://*.icims.com/*"
      ],
      "js": [
        "src/services/auth.js",
        "src/content/utils/utils.js",
        "src/content/sites/base.js",
        "src/content/sites/linkedin.js",
        "src/content/sites/indeed.js",
        "src/content/sites/icims.js",
        "src/content/contentScript.js"
      ],
      "css": ["src/content/styles/contentStyle.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "src/popup/popup.html",
      "src/popup/popup.js",
      "src/popup/styles/style.css"
    ],
    "matches": ["<all_urls>"]
  }],
  "oauth2": {
    "client_id": "YOUR_GITHUB_CLIENT_ID",
    "scopes": ["user:email"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "src/background/background.js"
  }
}
